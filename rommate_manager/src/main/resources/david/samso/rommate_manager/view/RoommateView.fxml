<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="david.samso.rommate_manager.controllers.RoommateController"
      spacing="10" alignment="CENTER"
      stylesheets="@../styles.css">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="GestiÃ³ de Roommates" style="-fx-font-size: 18;" />
    
    <TableView fx:id="roommateTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" />
            <TableColumn fx:id="nameColumn" text="Nom" />
            <TableColumn fx:id="ageColumn" text="Edat" />
            <TableColumn fx:id="emailColumn" text="Correu" />
        </columns>
    </TableView>

    <HBox spacing="10" alignment="CENTER">
        <TextField fx:id="nameField" promptText="Nom" />
        <TextField fx:id="ageField" promptText="Edat" />
        <TextField fx:id="emailField" promptText="Correu" />
    </HBox>

    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="addButton" text="Afegir" onAction="#handleAdd" />
        <Button fx:id="deleteButton" text="Eliminar" onAction="#handleDelete" />
        <Button fx:id="updateButton" text="Actualitzar" onAction="#handleUpdate" />
    </HBox>
</VBox>
