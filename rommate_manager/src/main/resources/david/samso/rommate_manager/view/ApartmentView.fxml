<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="david.samso.rommate_manager.controllers.ApartmentController"
      spacing="10" alignment="CENTER"
      stylesheets="@../styles.css">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Gestió d'Apartaments" style="-fx-font-size: 18;" />
    
    <TableView fx:id="apartmentTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" />
            <TableColumn fx:id="addressColumn" text="Adreça" />
            <TableColumn fx:id="rentColumn" text="Lloguer (€)" />
        </columns>
    </TableView>

    <HBox spacing="10" alignment="CENTER">
        <TextField fx:id="addressField" promptText="Adreça" />
        <TextField fx:id="rentField" promptText="Lloguer (€)" />
    </HBox>

    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="addButton" text="Afegir" onAction="#handleAdd" />
        <Button fx:id="deleteButton" text="Eliminar" onAction="#handleDelete" />
        <Button fx:id="updateButton" text="Actualitzar" onAction="#handleUpdate" />
    </HBox>
</VBox>
